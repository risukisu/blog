---
const today = new Date();
---

<footer>
	<div class="footer-border">╚════════════════════════════════════════════════════════╝</div>
	<div class="footer-content">
		<span>&copy; {today.getFullYear()} risu &middot; random memories</span>
		<div class="footer-links">
			<a href="/rss.xml">[rss]</a>
			<span>&middot;</span>
			<a href="https://github.com/risukisu" target="_blank">[github]</a>
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 0 1em 3em;
		max-width: 720px;
		margin: 0 auto;
	}
	.footer-border {
		color: var(--border);
		overflow: hidden;
		white-space: nowrap;
		margin-bottom: 1em;
		user-select: none;
		font-size: 0.85em;
	}
	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.5em;
		color: var(--text-muted);
		font-size: 0.8em;
	}
	.footer-links {
		display: flex;
		gap: 0.5em;
	}
	.footer-links a {
		color: var(--text-muted);
		text-decoration: none;
		transition: color 0.2s;
	}
	.footer-links a:hover {
		color: var(--cyan);
	}
</style>
