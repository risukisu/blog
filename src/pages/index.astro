<style>
	.ascii-hero {
		text-align: center;
		margin-bottom: 1.5em;
	}
	.mascot {
		display: inline-block;
		font-size: 0.5em;
		line-height: 1.1;
		text-align: left;
		background: none !important;
		border: none !important;
		padding: 0 !important;
		margin: 0;
		color: var(--amber);
	}
	@media (max-width: 720px) {
		.mascot {
			font-size: 0.32em;
		}
	}
	.hero-title {
		color: var(--cyan);
		font-size: 1.4em;
		font-weight: 700;
		margin-top: 0.5em;
		text-shadow: var(--glow-cyan);
		letter-spacing: 0.1em;
	}
	.hero-subtitle {
		color: var(--text-muted);
		font-size: 0.85em;
		margin-top: 0.25em;
	}
	.intro {
		color: var(--text-bright);
		font-size: 1em;
		margin: 0.25em 0 2em;
	}
	.link-list {
		display: flex;
		flex-direction: column;
		gap: 0.75em;
	}
	.link-item {
		display: flex;
		gap: 0.75em;
		align-items: baseline;
		text-decoration: none;
		padding: 0.4em 0;
		transition: all 0.2s;
	}
	.link-item:hover {
		text-shadow: var(--glow-cyan);
	}
	.link-item:hover .link-desc {
		color: var(--text-bright);
	}
	.link-glyph {
		color: var(--cyan);
		font-weight: 700;
		white-space: nowrap;
	}
	.link-desc {
		color: var(--text-muted);
		font-size: 0.85em;
		transition: color 0.2s;
	}
	.cursor-line {
		margin-top: 2em;
	}
	.blinking-cursor {
		color: var(--green);
		animation: blink 1s step-end infinite;
	}
	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}
</style>
