---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TerminalPrompt from '../components/TerminalPrompt.astro';
import AsciiBox from '../components/AsciiBox.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects — ${SITE_TITLE}`} description="things risu has built" />
	</head>
	<body>
		<Header />
		<main>
			<TerminalPrompt command="ls -la projects/" />

			<AsciiBox title="coming soon">
				<p class="placeholder">
					projects are loading... check back soon for things built with Claude Code and other tools.
				</p>
			</AsciiBox>

			<div class="cursor-line">
				<span class="blinking-cursor">█</span>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.placeholder {
		color: var(--text-muted);
		margin: 0.5em 0;
	}
	.cursor-line {
		margin-top: 2em;
	}
	.blinking-cursor {
		color: var(--green);
		animation: blink 1s step-end infinite;
	}
	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}
</style>
